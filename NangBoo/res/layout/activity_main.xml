<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:baselineAligned="true"
        android:orientation="horizontal" >

        <TextView android:id="@+id/title_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="@string/title_main"
            android:textColor="#000"
            android:textSize="15dp" />

        <Button android:id="@+id/chooseIngredient_main"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector_main"
            android:text="@string/chooseIngredient_main"
            android:textSize="12dp" />

        <Button android:id="@+id/multiple_main"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_selector_main"
            android:text="정렬"
            android:textSize="12dp" />
    </LinearLayout>
    
    <ListView android:id="@+id/listview_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="#FFFF96"/>
    
    <!--

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="#FF0"
        android:text="내가 바꿈 훗"
        android:textColor="#000" />
        
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button android:id="@+id/addIngredient_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="@string/addIngredient_main"
            android:textSize="12dp" />

        <Button android:id="@+id/searchingRecipe_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="@string/searchingRecipe_main"
            android:textSize="12dp" />

        <Button android:id="@+id/bookmark_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="@string/bookmark_main"
            android:textSize="12dp" />

        <Button android:id="@+id/setting_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="@string/setting_main"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>